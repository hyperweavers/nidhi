{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "no-empty-source": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ],
    "no-invalid-position-at-import-rule": [
      true,
      {
        "ignoreAtRules": ["apps/**/src/styles.css"]
      }
    ]
  }
}
