{
  "name": "eip",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/eip/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "en-IN"
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/eip",
        "index": "apps/eip/src/index.html",
        "browser": "apps/eip/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/eip/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/eip/public"
          }
        ],
        "styles": ["apps/eip/src/styles.scss"],
        "scripts": [
          "node_modules/flowbite-datepicker/dist/js/datepicker-full.min.js",
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4400
      },
      "configurations": {
        "production": {
          "buildTarget": "eip:build:production"
        },
        "development": {
          "buildTarget": "eip:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "eip:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/eip/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "eip:build",
        "port": 4400,
        "staticFilePath": "dist/apps/eip/browser",
        "spa": true
      }
    }
  }
}
