{
  "name": "kaasu",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/kaasu/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project kaasu --web",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/kaasu/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "format": {
      "executor": "@nx/workspace:format",
      "options": {
        "files": ["apps/kaasu"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/kaasu",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
